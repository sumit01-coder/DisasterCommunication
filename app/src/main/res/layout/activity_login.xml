<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_app_logo"
        android:contentDescription="App Logo"
        android:layout_marginBottom="32dp"/>

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DisasterComm"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Mesh Network"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:alpha="0.9"
        android:layout_marginBottom="48dp"/>

    <!-- Glassmorphic Card for Form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_glassmorphic_card"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#F5FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Username Input -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Your Name"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:paddingStart="48dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="12dp"
                android:drawableTint="@color/primary"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:layout_marginBottom="16dp"/>

            <!-- Role Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Role"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <!-- Role Spinner -->
            <Spinner
                android:id="@+id/spinnerRole"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- Join Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="JOIN NETWORK"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="@color/error"
                app:cornerRadius="16dp"
                app:elevation="4dp"
                app:icon="@drawable/ic_nearby"
                app:iconGravity="textStart"
                app:iconTint="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Info Text at Bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Secure • Offline • No Internet Required"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:gravity="center"/>

</LinearLayout>
