<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivChatAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_members"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primary"/>

        <!-- Member Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Name with Online Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvChatMemberName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Member Name"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Online indicator -->
                <View
                    android:id="@+id/viewChatOnlineStatus"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/status_connected"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvChatOnlineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active now"
                    android:textColor="@color/status_connected"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Connection Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvChatConnectionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tvChatConnectionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesh â€¢ "
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:id="@+id/tvChatConnectionQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signal: 95%"
                    android:textColor="@color/text_tertiary"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Secure Icon -->
        <ImageView
            android:id="@+id/ivChatSecure"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_lock_secure"
            app:tint="@color/status_connected"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
