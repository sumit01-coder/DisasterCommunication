<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp">

    <!-- Message Bubble -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvMessageBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/chat_bubble_sent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:minWidth="80dp"
            android:maxWidth="280dp">

            <!-- Message Text -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textSize="15sp"
                android:textColor="@color/chat_text_sent"
                android:lineSpacingExtra="2dp"/>

            <!-- Timestamp & Status Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textSize="11sp"
                    android:textColor="@color/chat_meta_sent"
                    android:layout_marginEnd="4dp"/>

                <!-- Status Icon (delivered/read) -->
                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_check"
                    app:tint="@color/chat_meta_sent"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
