<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPeer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Device Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp">
            
            <ImageView
                android:id="@+id/ivPeerIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_app_logo"
                app:tint="#555555" 
                android:background="@drawable/circle_background"
                android:padding="10dp"/>

            <!-- New Device Badge -->
            <TextView
                android:id="@+id/tvNewBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:background="@drawable/circle_background"
                android:backgroundTint="#FF5722"
                android:gravity="center"
                android:text="N"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Device Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPeerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peer Device"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvPeerStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <!-- Signal Strength Indicator -->
                <TextView
                    android:id="@+id/tvSignalStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ“¶ Strong"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Device Address -->
            <TextView
                android:id="@+id/tvPeerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00:00:00:00"
                android:textSize="10sp"
                android:textColor="#9E9E9E"
                android:fontFamily="monospace"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Connection Type Badge -->
        <TextView
            android:id="@+id/tvTypeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/rounded_badge"
            android:text="BT"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
